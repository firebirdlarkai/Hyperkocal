<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="10dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/serviceCard"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        >
        <ImageView
            android:backgroundTint="#EEEEEE"
            android:id="@+id/serviceLogo"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:scaleType="fitCenter"
            android:src="@drawable/state"
            android:foregroundGravity="left"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/serviceLogo"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Name"
                android:textStyle="bold"
                android:id="@+id/serviceName"
                android:maxLines="1"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                android:textStyle="italic"
                android:id="@+id/serviceDescription"
                android:maxLines="3"
                android:lines="3"
                android:textSize="10dp"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cloud Kitchen"
                android:textColor="@color/colorAccent"
                android:id="@+id/serviceType"
                android:maxLines="1"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curated"
                android:textColor="#ffbf00"
                android:id="@+id/serviceSource"
                android:maxLines="1"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:id="@+id/buttonPlaystore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/playstore"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                />
            <ImageView
                android:id="@+id/buttonAppstore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/appstore"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:tint="@color/colorAccent"
                android:tintMode="screen"
                />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/www"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/weblink"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>